<h1>Product:</h1>
<h2><%= @product.title %></h2>
<h3><%= @product.category %></h3>
<p>$<%= @product.price %></p>
<p><%= image_tag @product.photo %></p>

<hr />

<h2>Reviews</h2>
<%= render @product.reviews %>

<h2>Add a review:</h2>
<%= render 'reviews/form' %>



<%= link_to 'Back', products_path %>
<%= link_to 'Edit', edit_product_path(@product) %>
<%= link_to 'Delete', product_path(@product), method: :delete %>