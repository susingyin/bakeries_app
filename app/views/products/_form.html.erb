<%= form_for @product do |f| %>
	<div class="field">
		<%= f.label :title %><br />
		<%= f.text_field :title %>
	</div>
	
	<div class="field">
		<%= f.label :category %><br />
		<%= f.text_field :category %>
	</div>

	<div class="field">
		<%= f.label :price %><br />
		<%= f.text_field :price %>
	</div>
	
	<div class="field">
		<%= f.label :photo %><br />
		<%= f.text_field :photo %>
	</div>

	<div class="actions">
		<br /><%= f.submit %>
	</div>
<% end %>

<p><%= link_to 'Back', products_path %></p>